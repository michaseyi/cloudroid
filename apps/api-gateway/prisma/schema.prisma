generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  password String
  instances AndroidInstance[]
}

enum AndroidInstanceStatus {
  UNALLOCATED
  INITIALIZING
  RUNNING
  STOPPED
  DELETED
}

model AndroidInstance {
  id String @id @default(uuid())
  name String
  userId String
  user User @relation(fields: [userId], references: [id])
  status AndroidInstanceStatus @default(UNALLOCATED)
}



model AndroidInstanceTemplate {
  id String @id @default(uuid())
}